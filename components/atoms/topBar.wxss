.component{
  color: #fff;
}
.statusBar,.navigationBar,.menuButton{
  position: fixed;
  z-index: 10000;
}
/* 默认顶部背景色 */
.statusBar,.navigationBar{
  background-color: #000;
}
.navigationBar-content{
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
}
.navigationBar-content.border-box{
  box-sizing: border-box;
}
.navigationBar-content,.navigation-placeholder{
  position: relative;
  font-size: 10pt;
}
.back{
  position: relative;
  width: 40rpx;
  height: 100%;
}
.back .icon{
  content: '';
  position: absolute;
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
  left: 0;
  right: 0;
  margin: 0 auto;
  transform-origin: center;
  width: 20rpx;
  height: 20rpx;
  border: 5rpx solid #fff;
  border-top-width: 0;
  border-right-width: 0;
}

.flex-between{
  display: flex;
  justify-content: space-between;
}

.flex-1{
  flex: 1;
}
