.page {
  background-color: #fff;
  padding: 20px;
}

.nickname-box {
  margin-top: 40px;
  position: relative;
}

.nickname-box .nickname {
  position: relative;
  width: 100%;
  height: 64px;
  background-color: #F7F7F7;
  font-size: 16px;
  color: #CCCCCC;
  border: 1px solid #ddd;
  border-radius: 5px;
  text-indent: 20px;
  z-index: 2;
}

.nickname-box .icon {
  width: 66px;
  height: 63px;
  position: absolute;
  top: -40px;
  right: 10px;
  z-index: 0;
}

.description {
  margin-top: 10px;
  color: #999;
}

.name-box {
  margin-top: 30px;
  color: #999999;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.name-list {
  display: flex;
  flex-wrap: wrap;
  margin-top:40px;
}

.name-list > button {
  border: none;
  width: 183px;
  height: 37px;
  color: #ADADAD;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20px;
}

.save-btn {
  width: 100%;
  background-color: #FCDB57;
  color: #000;
  font-size: 18px;
  padding: 10px 0;
  border-radius: 30px;
  margin-top: 250px;
}
