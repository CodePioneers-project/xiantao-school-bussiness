.page {
  background-color: #fff;
  padding: 20px;
}

.nickname-box {
  margin-top: 40px;
  position: relative;
}

.nickname-box .nickname {
  position: relative;
  box-sizing: border-box;
  background-color: #eee;
  width: 100%;
  height: 64px;
  padding: 16px 14px;
  border-radius: 10px;
  z-index: 2;
}

.nickname-box .nickname::placeholder {
  color: #999;
}

.nickname-box .icon {
  width: 66px;
  height: 63px;
  position: absolute;
  top: -40px;
  right: 10px;
  z-index: 0;
}

.description {
  margin-top: 10px;
  color: #999;
  font-size: 14px;
}

.name-box {
  margin-top: 30px;
  color: #999999;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.name-list {
  display: flex;
  flex-wrap: wrap;
  margin-top:30px;
}

.name-list > button {
  border: none;
  max-width: 183px;
  width: 100%;
  height: 37px;
  color: #ADADAD;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20px;
  background-color: #f7f7f7;
}

.name-list > button::after {
  border: none;
}

.save-btn {
  width: 100%;
  background-color: #FCDB57;
  color: #000;
  font-size: 18px;
  padding: 10px 0;
  border-radius: 30px;
  margin-top: 300px;
}
