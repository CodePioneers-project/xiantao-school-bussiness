/* pages/publish/publish.wxss */
.back {
  position: relative;
  width: 40rpx;
  height: 100%;
}

.back .icon {
  content: '';
  position: absolute;
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
  left: 0;
  right: 0;
  margin: 0 auto;
  transform-origin: center;
  width: 20rpx;
  height: 20rpx;
  border: 5rpx solid #fff;
  border-top-width: 0;
  border-right-width: 0;
}

.container {
  background-color: #fff;
  height: 100%;
  padding: 0 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
  position: relative;
}

.container button {
  height: 103px;
  width: 100%;
  border-radius: 18px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
}

.container button::after {
  border: none;
}

.container button .icon {
  width: 20rpx;
  height: 20rpx;
  border: 5rpx solid #000;
  border-top-width: 0;
  border-right-width: 0;
  transform: rotate(225deg);
  z-index: 1;
}

.container button text {
  z-index: 1;
  font-size: 20px;
  font-weight: bold;
}

.container button .bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}

.container .publish-icon {
  width: 181px;
  height: 160px;
  position: absolute;
  top: 13%;
  right: 5px;
}

.container .receive-goods-icon {
  width: 181px;
  height: 160px;
  position: absolute;
  top: 50%;
  left: 5px;
  transform: rotateY(180deg);
  transform-origin: center;
}