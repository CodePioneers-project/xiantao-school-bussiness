.page {
  height: 100%;
  background-color: #fff;
  padding: 20px;
  display: flex;
  justify-content: space-between;
}

.container {
  position: relative;
}

.page textarea {
  box-sizing: border-box;
  background-color: #eee;
  width: 100%;
  height: 200px;
  padding: 16px 14px;
  border-radius: 10px;
}

.counter {
  position: absolute;
  right: 15px;
  bottom: 15px;
  color: #999;
}

.page .save-btn {
  width: 100%;
  background-color: #FCDB57;
  color: #000;
  font-size: 18px;
  padding: 10px 0;
  border-radius: 30px;
  margin-bottom: 70px;
}
