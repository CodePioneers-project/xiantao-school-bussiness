.page {
  height: 100%;
  background-color: #fff;
  padding: 20px;
}

.container {
  position: relative;
}

.page textarea {
  width: 100%;
  height: 200px;
  background-color: #F7F7F7;
  border-radius: 5px;
  text-indent: 20px;
}

.counter {
  position: absolute;
  right: 10px;
  bottom: 10px;
  font-size: 14px;
  color: #999;
}

.page .save-btn {
  width: 100%;
  background-color: #FCDB57;
  color: #000;
  font-size: 18px;
  padding: 10px 0;
  border-radius: 30px;
  margin-top: 250px;
}
