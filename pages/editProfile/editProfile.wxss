.container {
  padding: 20px;
  background-color: #fff;
}

.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  padding: 10px;
  border-bottom: 1px solid #ddd;
}

.form-item label {
  width: 60px;
  font-size: 16px;
  color: #333;
  margin-right: 10px;
}

.form-item input, .form-item textarea, .form-item .picker {
  flex: 1;
  font-size: 16px;
  color: #666;
  border: 1px solid #ddd;
  padding: 5px;
  border-radius: 5px;
}

.save-btn {
  width: 100%;
  background-color: #1aad19;
  color: #fff;
  font-size: 18px;
  padding: 10px 0;
  border-radius: 5px;
  margin-top: 20px;
}

.save-btn:active {
  background-color: #178c15;
}