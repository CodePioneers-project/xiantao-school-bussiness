<view class="container">
  <button style="border: none; border-radius: 0;" class="form-item" open-type="chooseAvatar" bindchooseavatar="chooseAvatar">
    <label>头像</label>
    <image class="user-img" src="{{login.avatar || '/img/my/my-img.png'}}" />
    <view class="icon" ></view>
  </button>
  <view class="form-item" bindtap="toNickNamePage">
    <label>昵称</label>
    <view class="icon" ></view>
  </view>
  <view class="form-item" bindtap="toUserProfileBgPage">
    <label>背景</label>
    <view class="icon" ></view>
  </view>
  <view class="form-item" bindtap="toUserIntroPage">
    <label>简介</label>
    <view class="icon" ></view>
  </view>
  <view class="form-item">
    <label>退出登录</label>
    <view class="icon" ></view>
  </view>

  <view class="logout-modal">
    <text>您确认退出吗</text>
    <button class="submit">确认</button>
    <button>取消</button>
  </view>
</view>
