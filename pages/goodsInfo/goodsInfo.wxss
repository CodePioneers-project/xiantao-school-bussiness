.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.product-info {
  display: flex;
  align-items: center;
  padding: 10px;
  background-color: white;
  border-bottom: 1px solid #eaeaea;
}

.product-image {
  width: 50px;
  height: 50px;
  border-radius: 5px;
  margin-right: 10px;
}

.product-details {
  flex: 1;
}

.product-title {
  font-size: 16px;
  color: #333;
}

.product-price {
  font-size: 20px;
  color: black;
}

.pay-button {
  background-color: #f9d835;
  color: black;
  width: 90px;
  height: 37px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 5px 10px;
  border-radius: 20px;
  font-size: 14px;
}

.message-list {
  flex: 1;
  overflow-y: scroll;
  padding: 10px;
  background-color: white;
}

.input-container {
  background-color: white;
  display: flex;
  align-items: center;
  padding: 16px;
  padding-bottom: 42px;
}

.input {
  background-color: #F2F2F2;
  flex: 1;
  padding: 8px 8px 8px 18px;
  border-radius: 20px;
  margin-right: 10px;
  font-size: 14px;
}

.input-icons {
  display: flex;
  gap: 10px;
}

.emoji-button, .more-button {
  width: 30px;
  height: 30px;
  padding: 0;
  background: transparent;
}

.emoji-img {
  width: 30px;
  height: 30px;
}

.more-img {
  width: 30px;
  height: 30px;
}

button::after {
  border: none;
}