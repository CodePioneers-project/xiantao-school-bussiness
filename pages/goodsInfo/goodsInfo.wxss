/* goodsInfo.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.goods-image {
  width: 100%;
  max-height: 80vh;
  object-fit: contain;
}

.description {
  margin: 20px 0;
  text-align: center;
  font-size: 16px;
  color: #666;
}

.button-container {
  margin-top: 20px;
}

.want-button {
  background-color: #4CAF50;
  color: white;
  padding: 10px 20px;
  border: none;
  border-radius: 5px;
  font-size: 16px;
  cursor: pointer;
}

.want-button[data-status="true"] {
  background-color: #9E9E9E;
}