<!-- goodsInfo.wxml -->
<view class="goods-info-page">
  <scroll-view scroll-y="true" class="scroll-view">
    <view class="header">
      <swiper class="swiper" indicator-dots="{{true}}" autoplay="{{true}}" interval="5000" duration="1000">
        <block wx:for="{{goods.images}}" wx:key="index">
          <swiper-item>
            <image src="{{item}}" class="product-img" mode="aspectFill"></image>
          </swiper-item>
        </block>
      </swiper>
      <view class="price-container">
        <text class="price">￥{{ goods.price }}</text>
      </view>
    </view>

    <view class="details">
      <text class="title">{{ goods.title }}</text>
      <text class="description">{{ goods.description }}</text>
    </view>

    <view class="seller-info">
      <image class="seller-img" src="{{ goods.seller.avatar }}" />
      <text class="seller-name">{{ goods.seller.name }}</text>
    </view>

    <view class="actions">
      <button class="contact-seller">联系卖家</button>
      <button class="buy-now">立即购买</button>
    </view>
  </scroll-view>
</view>