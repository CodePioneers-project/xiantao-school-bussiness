}

button::after {
  border: none;
}

.add-modal {
  position: absolute;
  top: 0;
  left: 0;
  background-color: rgba(56, 56, 56, .5);
  width: 100%;
  height: 100%;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-container {
  background-color: #fff;
  padding: 20px 40px;
  border-radius: 20px;
}

.modal-container text {
  font-size: 17px;
  color: #262626;
  display: block;
  text-align: center;
}

.modal-btn-box {
  margin-top: 40px;
  display: flex;
}

.modal-btn-box button {
  border-radius: 15px;
  width: 127px;
  background-color: #F0F0F0;
}

.submit-btn {
  background-color: #fcd64d !important;
  margin-left: 20px;
}