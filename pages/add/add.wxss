.form {
  background-color: white;
  padding-bottom: 40px;
  height: 100%;
  position: relative;
}

.title {
  margin: 0px 16px;
  border-bottom: 1px solid #f0f0f0;
  padding: 20px 0px;
}

.describle {
  position: relative;
  margin: 0px 16px;
  border-bottom: 1px solid #f0f0f0;
  padding: 20px 0px;
}

.font-number-figure {
  position: absolute;
  color: #989798;
  bottom: 35px;
  right: 15px;
}

.describle-textarea {
  box-sizing: border-box;
  background-color: #eee;
  width: 100%;
  padding: 16px 14px;
  padding-bottom: 40px;
  border-radius: 10px;
}

.price {
  margin: 0px 16px;
  border-bottom: 1px solid #f0f0f0;
  padding: 12px 0px;
}

.update {
  display: flex;
  margin: 0px 16px;
  padding: 32px 0px;
  scroll-behavior: smooth;
  overflow-x: auto; /* 确保滚动条显示 */
  white-space: nowrap;
}

.update-img {
  flex-shrink: 0;
  display: inline-block;
  width: 150px;
  margin-right: 12px;
  height: 150px;
}

.update-placeholder {
  margin-right: 12px;
  flex-shrink: 0;
  width: 150px;
  height: 150px;
  background-color: #d9d9d9;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10px;
  position: relative;
}

.update-placeholder::before {
  content: '';
  position: absolute;
  width: 35.25px;
  border-top: 2.16px solid #6a6a6a;
}

.update-placeholder::after {
  content: '';
  position: absolute;
  height: 35.25px;
  border-left: 2.16px solid #6a6a6a;
}

.status-overlay {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(56, 56, 56, .5);
  z-index: 999;
  display: flex;
  justify-content: end;
  align-items: flex-end;
}

.status-container {
  width: 100%;
  background-color: #fff;
  height: 50%;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
}

.status-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px;
  color: #A2A1A1;
  font-size: 18px;
}

.status-actions > button {
  color: #A2A1A1;
  background: none;
  font-size: 18px;
  margin: 0;
}

.status-picker-item {
  line-height: 50px;
  font-size: 18px;
  color: #A2A1A1;
  padding: 0 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-picker-item > image {
  width: 18px;
  height: 13px;
}

.add-location {
  color: #989798;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  margin: 0px 16px;
  padding: 14px 0px;
}

.status {
  color: #989798;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
  margin: 0px 16px;
  padding: 14px 0px;
  border-bottom: 1px solid #f0f0f0;
}

