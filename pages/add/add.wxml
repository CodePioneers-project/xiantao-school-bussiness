<form bindsubmit="formSubmit">
  <view class='top-card'>
    <view class='title'>
      <input name="name" placeholder="标题品牌型号"></input>
    </view>
    <view class='link'></view>
    <view class='describle'>
      <textarea name="describle" placeholder="商品描述"></textarea>
    </view>
    <view class='img-span'>
      <image wx:for="{{img}}" src='{{item}}' bindtap='updataimg' class='img'></image>
      <image src='/img/add_image.png' bindtap='updataimg' class='img'></image>
    </view> 
  </view>

  <view class='buttom-card'>
    <view class='span'>
      <input name="price" placeholder='价格' type='digit'></input>
    </view> 
    <view class='link'></view>
    <view class='span'> 
      <picker bindchange="bindPickerChange" range-key='name' range="{{classification}}" value='{{index}}'>
        分类：<text>你选择了：{{classification[index].name}}</text>
      </picker>
    </view>   
  </view>

  <view class='buttom'>
    <button form-type='submit'>确认发布</button>
  </view>
</form>